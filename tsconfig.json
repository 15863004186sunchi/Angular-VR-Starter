{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "!./src/**/*.spec.ts",
    "!./node_modules/**",
    "./typings/**/*.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./src/app/components/app.component.ts",
    "./src/app/components/app.routes.ts",
    "./src/app/components/index.ts",
    "./src/app/components/shared/index.ts",
    "./src/app/components/shared/modules/index.ts",
    "./src/app/components/shared/modules/vr-module.component.ts",
    "./src/app/components/shared/stage/index.ts",
    "./src/app/components/shared/stage/stage.component.ts",
    "./src/app/components/shared/stage/stage.routes.ts",
    "./src/app/index.ts",
    "./src/custom-typings.d.ts",
    "./src/main.browser.ts",
    "./src/platform/browser/directives.ts",
    "./src/platform/browser/index.ts",
    "./src/platform/browser/pipes.ts",
    "./src/platform/browser/providers.ts",
    "./src/platform/environment.ts",
    "./src/polyfills.ts",
    "./src/vendor.ts",
    "./typings/globals/bootstrap/index.d.ts",
    "./typings/globals/core-js/index.d.ts",
    "./typings/globals/crypto-js/index.d.ts",
    "./typings/globals/hammerjs/index.d.ts",
    "./typings/globals/jquery/index.d.ts",
    "./typings/globals/lodash/index.d.ts",
    "./typings/globals/node/index.d.ts",
    "./typings/globals/source-map/index.d.ts",
    "./typings/globals/three/index.d.ts",
    "./typings/globals/uglify-js/index.d.ts",
    "./typings/globals/webgl-ext/index.d.ts",
    "./typings/globals/webpack/index.d.ts",
    "./typings/index.d.ts"
  ]
}
